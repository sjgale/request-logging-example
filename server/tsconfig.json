{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "lib": [
      "es2016",
      "dom"
    ],
    "outDir": "../dist/server",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "client",
    "dist"
  ],
  "include": [
    "./**/*"
  ]
}